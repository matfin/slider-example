html,
body {
	margin: 0;
	padding: 0;
	width: 100%;
	height: 100%;
}

body {
	text-align: center;
}

.sliderContainer {
	position: relative; 
	margin: 20px auto;
	width: 100%;
	overflow: hidden;
	.user-select(none);

	.slider {
		position: relative;
		.display(flex);
		.flex(1);
		.slide {
			.display(flex);
			.flex(1);
			width: 100%;

			p {
				display: block;
				width: 100%;
				height: 300px;
				line-height: 300px;
				cursor: pointer;
				font-size: 50px;
			}
		}
	}
}